<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="FilterBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FilterModalStyle</item>
    </style>
    <style name="FilterModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_filter</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="detail_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="detail_round_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="detail_round_image_2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="detail_round_rating" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/background_spinner</item>
    </style>

    <style name="collection_detail_image">
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="collection_home_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12sp</item>
        <item name="chipCornerRadius">20dp</item>
    </style>
    <style name="CustomChipStyleRate" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipIcon">@drawable/ic_star_blue</item>
        <item name="chipIconTint">@color/chip_icon_color</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12sp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStartPadding">10dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>