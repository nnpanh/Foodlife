                                <TextView
                                    android:id="@+id/tvDetailTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    tools:text="15 mins"
                                    android:layout_marginEnd="8dp"
