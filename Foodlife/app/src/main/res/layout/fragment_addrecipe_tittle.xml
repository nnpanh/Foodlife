<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="172dp"
        android:text="Add recipe"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="103dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tittle"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="57dp"
        android:layout_height="39dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="30dp"
        android:text="1/4"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light"
        android:textSize="12sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/addrecipe_roundedcorner_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="574dp"
        android:layout_marginTop="184dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="700dp">

            <EditText
                android:id="@+id/editTextRecipeName"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/addrecipe_roundedcorner_2"
                android:ems="10"
                android:hint="Recipe name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/addrecipe_roundedcorner_2"
                android:ems="10"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="17.5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextRecipeName" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="221dp"

                android:layout_marginStart="30dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="30dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDescription">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="350dp"
                    android:layout_height="221dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/addrecipe_roundedcorner_2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_placeholder" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/uploadimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="Upload image"

                    android:src="@drawable/ic_bi_camera_fill"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/secondary_100" />
            </androidx.cardview.widget.CardView>
<!--            android:maxImagesize="48dp"-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>