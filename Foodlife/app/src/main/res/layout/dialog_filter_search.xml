<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dialog_filter"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="24dp"
        >
        <TextView
            android:id="@+id/tvFilterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Filter Search"
            android:textColor="@color/primary_100"
            android:textSize="@dimen/text_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvFilterTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Time"
            android:textColor="@color/primary_100"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFilterTitle" />

        <TextView
            android:id="@+id/tvFilter30Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Within 30 mins"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search" />
        <TextView
            android:id="@+id/tvFilter1Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Within 1 hours"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search"/>
        <TextView
            android:id="@+id/tvFilterMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="More"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search"
            android:layout_marginEnd="10dp" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:constraint_referenced_ids="tvFilter30Min,tvFilter1Hour,tvFilterMore"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="10dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalGap="10dp"
            app:flow_wrapMode="chain"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFilterTime" />

        <TextView
            android:id="@+id/tvFilterRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Rate"
            android:textColor="@color/primary_100"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowTime" />


        <ImageView
            android:id="@+id/ivFilterRate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate_5" />
        <ImageView
            android:id="@+id/ivFilterRate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate_4" />
        <ImageView
            android:id="@+id/ivFilterRate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate_3" />
        <ImageView
            android:id="@+id/ivFilterRate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate_2" />
        <ImageView
            android:id="@+id/ivFilterRate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate_1" />
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:constraint_referenced_ids="ivFilterRate1,ivFilterRate2,ivFilterRate3,ivFilterRate4,ivFilterRate5"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="10dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalGap="10dp"
            app:flow_wrapMode="chain"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="@id/tvFilterRate" />

        <TextView
            android:id="@+id/tvFilterCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Category"
            android:textColor="@color/primary_100"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowRate" />

        <TextView
            android:id="@+id/tvFilterCatVegetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Vegetables"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search" />
        <TextView
            android:id="@+id/tvFilterCatMeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Meat"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search" />
        <TextView
            android:id="@+id/tvFilterCatVN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Vietnamese"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search" />
        <TextView
            android:id="@+id/tvFilterCatDessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Dessert"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search" />
        <TextView
            android:id="@+id/tvFilterCatWestern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Western"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_filter_search" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:constraint_referenced_ids="tvFilterCatDessert,tvFilterCatMeat,tvFilterCatVegetable,tvFilterCatVN,tvFilterCatWestern"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="10dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalGap="10dp"
            app:flow_wrapMode="chain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFilterCategory" />

        <TextView
            android:id="@+id/tvFilterButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_filter_search_pick"
            android:text="Filter"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            app:layout_constraintTop_toBottomOf="@id/flowCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
        android:id="@+id/tvFilterClear"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/rounded_filter_search"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="Clear Filter"
        android:textAlignment="center"
        android:textColor="@color/primary_60"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFilterButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

