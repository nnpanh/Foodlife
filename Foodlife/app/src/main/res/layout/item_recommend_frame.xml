<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="recipe"
            type="com.example.foodlife.models.Recipe" />
    </data>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rec_frame_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:imageResource="@{recipe.img}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:srcCompat="@drawable/rec1" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rec_profile_img"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    app:shapeAppearanceOverlay="@style/circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/secondary_100"
                    app:strokeWidth="2dp"
                    app:imageResource="@{recipe.img}"
                    tools:srcCompat="@drawable/example_dish_1" />



                <ImageView
                    android:id="@+id/rec_frame_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/ic_rating_frame"
                    app:layout_constraintTop_toTopOf="@id/rec_frame_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/tv_rec_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="1.9dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintEnd_toEndOf="@id/rec_frame_rating"
                    app:layout_constraintTop_toTopOf="@+id/rec_frame_rating"
                    tools:text="5" />

                <ImageView
                    android:id="@+id/rec_frame_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/rec_frame_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="71dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@{recipe.title}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rec_frame_bg"
                    tools:text="Stir-fried beef with broccoli and Rice" />

                <ImageView
                    android:id="@+id/rec_frame_cook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/chef_bold"
                    app:layout_constraintTop_toBottomOf="@id/rec_frame_name"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/tv_rec_cook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/rec_frame_cook"
                    app:layout_constraintTop_toTopOf="@+id/rec_frame_cook"
                    tools:text="Medium" />

                <ImageView
                    android:id="@+id/rec_frame_time"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/clock_bold"
                    app:layout_constraintStart_toEndOf="@id/tv_rec_cook"
                    app:layout_constraintTop_toBottomOf="@id/rec_frame_name"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_rec_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/rec_frame_time"
                    app:layout_constraintTop_toTopOf="@+id/rec_frame_cook"
                    tools:text="45 mins" />

                <ImageView
                    android:id="@+id/rec_frame_save"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_saved_rec"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription" />


            </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

