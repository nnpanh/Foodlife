<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.foodlife.view_models.DetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp">
            <FrameLayout
                android:id="@+id/flVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />
            </FrameLayout>
            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_header"
                app:layout_constraintBottom_toBottomOf="@id/flVideo"
                app:layout_constraintEnd_toEndOf="@id/flVideo"
                app:layout_constraintStart_toStartOf="@id/flVideo"
                tools:text="Eggs, and Baconnnnnnnnnnnnnnnnddddddddddddd" />

            <ImageButton
                android:id="@+id/imgToolbarBtnFav"
                android:layout_width="36dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/arrow"
                android:contentDescription="backward_arrow"
                android:rotation="180"
                android:src="@drawable/arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flVideo">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_inner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/videoView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/detail_avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/image_placeholder"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/detail_round_image" />

                        <TextView
                            android:id="@+id/author_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Amelia Melanes"
                            android:textColor="@color/primary_100"
                            app:layout_constraintStart_toEndOf="@+id/detail_avatar"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/author_recipe_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="23 recipes"
                            android:textColor="@color/primary_100"
                            app:layout_constraintStart_toEndOf="@+id/detail_avatar"
                            app:layout_constraintTop_toBottomOf="@+id/author_name" />

                        <RatingBar
                            android:id="@+id/detail_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:numStars="5"
                            android:progressDrawable="@drawable/ic_custom_star"
                            android:rating="0"
                            android:stepSize="1.0"
                            app:layout_constraintHeight="26dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/detail_avatar" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/detail_rating_num"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/rating"
                            app:layout_constraintStart_toEndOf="@id/detail_rating"
                            app:layout_constraintTop_toBottomOf="@id/detail_avatar"
                            app:shapeAppearanceOverlay="@style/detail_round_rating" />

                        <TextView
                            android:id="@+id/current_rating_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="4.5"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/detail_rating_num"
                            app:layout_constraintStart_toStartOf="@id/detail_rating_num"
                            app:layout_constraintTop_toTopOf="@id/detail_rating_num" />

                        <ImageView
                            android:id="@+id/current_rating_star"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/favorite_bold"
                            app:layout_constraintBottom_toBottomOf="@id/detail_rating_num"
                            app:layout_constraintStart_toEndOf="@id/current_rating_num"
                            app:layout_constraintTop_toTopOf="@id/detail_rating_num"
                            app:tint="@color/white" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/detail_info_icon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:divider="@drawable/empty_width_divider"
                            app:layout_constraintTop_toBottomOf="@id/detail_rating"
                            app:showDividers="middle">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/clock_bold" />

                                <TextView
                                    android:id="@+id/tvDetailTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="15 mins"
                                    android:textColor="@color/primary_100" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cooking" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="45 mins"
                                    android:textColor="@color/primary_100" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/chef_bold" />

                                <TextView
                                    android:id="@+id/tvDetailLevel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Medium"
                                    android:textColor="@color/primary_100" />
                            </LinearLayout>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:id="@+id/tvDetailDes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Enjoy each morning the delicious taste of breakfast made by egg."
                            android:textColor="@color/primary_100"
                            app:layout_constraintTop_toBottomOf="@id/detail_info_icon" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/detail_menu"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/image_placeholder"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/more_bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/cardView">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorSurface"
                    android:elevation="8dp"
                    app:tabIndicatorColor="@color/secondary_100"
                    app:tabIndicatorFullWidth="false"
                    app:tabSelectedTextColor="@color/secondary_100"
                    app:tabTextAppearance="@style/detail_tab_text"
                    app:tabTextColor="@color/primary_100">

<!--                    <com.google.android.material.tabs.TabItem-->
<!--                        android:id="@+id/tabItem1"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Ingredients" />-->

<!--                    <com.google.android.material.tabs.TabItem-->
<!--                        android:id="@+id/tabItem2"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Directions" />-->

<!--                    <com.google.android.material.tabs.TabItem-->
<!--                        android:id="@+id/tabItem3"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Reviews" />-->
                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>